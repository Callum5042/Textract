<Window x:Class="Textract.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Textract.Wpf"
        mc:Ignorable="d"
        Title="Textract" Height="450" Width="800" ResizeMode="CanResizeWithGrip">
    <DockPanel>

        <Menu DockPanel.Dock="Top" Background="White">
            <MenuItem Header="File">
                <MenuItem Header="Open" Click="MenuItem_Click_Load" />
                <Separator />
                <MenuItem Header="Exit" Click="MenuItem_Click_Exit" />
            </MenuItem>

        </Menu>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>Awaiting Image</StatusBarItem>
        </StatusBar>

        <Grid>

            <StackPanel x:Name="EmptyStackPanel" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible">
                <Label Content="Load Image" FontStyle="Italic" />
            </StackPanel>
            
            <TextBox x:Name="ProcessedTextbox" Visibility="Collapsed" Margin="1" Padding="2" IsReadOnly="False" AcceptsReturn="True" BorderThickness="0" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" />

        </Grid>


    </DockPanel>
</Window>
